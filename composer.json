{
    "name": "poolsphp/pools",
    "description": "A simple and fast implementation of a thread pool in PHP",
    "keywords": ["php", "tools", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "Francisco Barrento",
            "email": "francisco.barrento@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "composer/composer": "^2.8",
        "illuminate/filesystem": "^10|^11|^12.0",
        "illuminate/support": "^10|^11|^12.0",
        "laravel/prompts": "^0.3",
        "symfony/console": "^7.2",
        "symfony/process": "^7.2"
    },
    "require-dev": {
        "larastan/larastan": "^3.1",
        "laravel/pint": "^1.21",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-type-coverage": "^3.1",
        "rector/rector": "2.0.10",
        "symfony/var-dumper": "^7.1.6"
    },
    "bin": ["bin/pools"],
    "autoload": {
        "psr-4": {
            "Pools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.x-dev"
        }
    },
    "archive": {
        "exclude": [
            "/.vscode",
            "/.github",
            "/test-output",
            "/.gitattributes",
            "/.gitignore",
            "/phpunit.xml"
        ]
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --min=100",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
